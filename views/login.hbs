<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 py-5 ms-xl-4 navbar-light navbar-brand">
           <a class="navbar-brand" href="/"> <img src="images/navbar/ambulance.png" width="50px" height="50px" alt="ambulance">  <a class="fw-bold navbar-brand" href="/"> PetAmbulance</a>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form action="login" method="post" class="form-login">

            <h3 class="fw-normal lh-1 mb-3 fw-bold pb-3">Login</h3>
{{!-- inputs and labels  --}}

               <div class="form-outline mb-4">

              <input type="text" name="user" id="user" autocomplete="username" class="form-control form-control-lg" autofocus />
              <label class="form-label" for="user">User Name</label>

            </div>

            <div class="form-outline mb-4">
              
              <input type="password" name="pass" id="pass" autocomplete="current-password" class="form-control form-control-lg" />
              <label class="form-label" for="pass">Password</label>
           
            </div>

{{!-- Bootsrap Alert --}}
{{#if message}}
<div class="alert alert-primary d-flex align-items-center" role="alert">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </svg>
  <div>
    {{message}}
  </div>
</div>
{{/if}}
            <div class="pt-1 mb-4">
              
              <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
            
            </div>



            <p class="small mb-5 pb-lg-2"><a class="text-muted" href="contactUs">Forgot password?</a></p>
            <p>Don't have an account? <a href="signup" class="link-info">Register here</a></p>


          </form>
     
        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="images/login/catlogin.png" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>