<div class="vh-100">
 
  <div class="container-fluid">
   
    <div class="row">
      
      <div class="col-sm-6 text-black">
 <div class="ms-xl-4 navbar-light pt-5 px-5 navbar-brand">
           <a class="navbar-brand" href="/"> <img src="/images/navbar/ambulance.png" width="50px" height="50px" alt="ambulance">  <a class="fw-bold navbar-brand" href="/"> PetAmbulance</a>
        </div>
        <div class="px-5 ms-xl-4 pt-5">
          <span class="h1 text-primary fw-bold mb-0">Let's get in touch ! </span>
          <p class="pt-5"> If you need to contact a Vet, you are experiencing some issues with your account, or needing personalized advice, pelase fill up this form below, and we will get back to you shortly.</p>
        </div>

        <div class="d-flex align-items-center px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
          {{!-- start form --}}
          <form action="contactUs" style="width: 23rem;" method="POST">

            <div class="row mb-4">

     {{#if sendMessage}}
               <div class="alert alert-primary d-flex align-items-center" role="alert">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </svg>
                    {{sendMessage}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/if}}
                {{#each arrWarnings}}
              <div class="alert alert-primary d-flex align-items-center" role="alert">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </svg>
                    {{msg}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

                {{/each}}

  <!-- Text input -->
    <div class="col">
      <div class="form-outline mb-4">
        <label class="form-label" for="form6Example1">First name</label>
          <input type="text" class="form-control"  id="name" name="name" placeholder="Name ..." autofocus {{#if formData.name}}
                    value="{{formData.name}}" {{/if}}>
      </div>
    </div>

    <div class="col">
    <div class="form-outline mb-4">
        <label class="form-label" for="form6Example2">Last name</label>
        <input type="text" class="form-control"  id="lastName" name="lastName" placeholder="Last Name ..." {{#if formData.lastName}}
                    value="{{formData.lastName}}" {{/if}}>
    </div>
    </div>
  </div>

  <!-- Email input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form6Example5">Email</label>
       <input type="text" class="form-control"  name="email" id="email" placeholder="example@example.com" {{#if formData.email}}
                    value={{formData.email}} {{/if}}>
  </div>

  <!-- Number input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form6Example6">Phone</label>
    <input type="tel" id="phone" name="phone" value="{{formData.phone}}" placeholder="01123456789" class="form-control" />
  </div>


  <!-- Message input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form6Example7">Please tell us with detail your consultation to provide the accurate help needed.  </label>
   <textarea name="message" class="form-control"  id="message" cols="30" rows="8">{{formData.message}}</textarea>
  </div>


    <div class="pt-1 mb-4">
              <button class="btn btn-lg btn-primary btn-block" value="submit" type="submit">Send</button>
               <a href="/"> <button class="btn btn-lg btn-secondary btn-block" type="button" value="cancel">Cancel</button> </a>
            </div>

         </form>

        </div>

      </div>

  <div class="py-5 col-lg-6 px-5 my-5 d-none d-sm-block ">
        <img src="/images/contactus/contactus.png" alt="Login image" class="w-100 form">
      </div>
    
    </div>
       
  </div>

</div>

    